<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.horkov.mall.dao.BoardDAO">
 
    <select id="selectBoards" parameterType="com.horkov.mall.dto.BoardDTO" resultType="com.horkov.mall.dto.BoardDTO">
        SELECT * FROM board
    </select>

    <insert id="insertBoards" parameterType="com.horkov.mall.dto.BoardDTO">
        INSERT INTO board(title, content, writer)
        VALUES (#{title}, #{content}, #{writer})
    </insert>
</mapper>
